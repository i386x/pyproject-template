#
# File:    ./setup.cfg
# Author:  {{ cookiecutter.team_name }} <{{ cookiecutter.team_email|replace('@', ' AT ') }}>
# Date:    {% raw %}{{ stamp() }}{% endraw %}
# Project: {{ cookiecutter.project_description }}
# Brief:   Metadata for setup.py
#
# SPDX-License-Identifier: MIT
#

[metadata]
name = {{ cookiecutter.project_name }}
version = attr: {{ cookiecutter.namespace }}{{ '.' if cookiecutter.namespace|length > 0 }}{{ cookiecutter.package_name }}.__version__
url = https://github.com/{{ cookiecutter.github_user }}/{{ cookiecutter.project_name }}
project_urls =
    Bug Reports = https://github.com/{{ cookiecutter.github_user }}/{{ cookiecutter.project_name }}/issues
    Source = https://github.com/{{ cookiecutter.github_user }}/{{ cookiecutter.project_name }}
author = {{ cookiecutter.team_name }}
author_email = {{ cookiecutter.team_email }}
classifiers =
{% raw -%}
{% for item in classifiers %}
    {{ item }}
{% endfor %}
{% endraw %}
license = MIT
license_file = LICENSE
description = {{ cookiecutter.project_description }}
long_description = file: README.md
long_description_content_type = text/markdown
keywords =
{% raw -%}
{% for item in keywords %}
    {{ item }}
{% endfor %}
{% endraw %}
platforms =
{% raw -%}
{% for item in platforms %}
    {{ item }}
{% endfor %}
{% endraw %}

[options]
zip_safe = False
setup_requires =
    setuptools >=40.9.0
{% raw %}{{ '#' if requirements|length == 0 }}{% endraw %}install_requires =
{% raw -%}
{% for item in requirements %}
    {{ item }}
{% endfor %}
{% endraw %}
python_requires = >={% raw %}{{ least_python3 }}{% endraw %}, <4
include_package_data = True
packages = find:
package_dir =
    = src

[options.extras_require]
dev =
    check-manifest
test =
    coverage
{% raw -%}
{% if has_entry_points %}

[options.entry_points]
{{ entry_point_kind }} =
    {{ entry_point_name }} = {{ namespace }}{{ package_name }}.{{ entry_point_fqdn }}
{% endif %}
{% endraw %}

[options.packages.find]
where = src

[bdist_wheel]
universal = True

[check]
metadata = True
strict = True

[sdist]
formats = zip, gztar

[flake8]
filename = *.py,*.pyw
select = E,F,W,C,G
enable-extensions = G
max-line-length = 79
max-doc-length = 79
# Disable not PEP 8 compliant warnings:
#   E203 whitespace before ':'
#   W503 line break before binary operator
extend-ignore = E203, W503
show-source = True
statistics = True
doctests = True
max-complexity = 15

[mypy]
disallow_any_expr = True
disallow_any_decorated = True
disallow_any_explicit = True
disallow_any_generics = True
disallow_subclassing_any = True
disallow_untyped_calls = True
disallow_untyped_defs = True
disallow_incomplete_defs = True
check_untyped_defs = True
disallow_untyped_decorators = True
no_implicit_optional = True
warn_redundant_casts = True
warn_unused_ignores = True
warn_return_any = True
warn_unreachable = True
strict_equality = True
warn_incomplete_stub = True
warn_unused_configs = True

[pydocstyle]
match = .*\.py[w]?
